---
import clsx from "clsx/lite";

type Props = {
  className?: string;
  size?: "default" | "large";
};

const { size = "default", className } = Astro.props;
---

<h2
  class={clsx(
    "text-white font-inter font-medium text-balance",
    size === "default" && "text-lg md:text-xl xl:text-2xl",
    size === "large" && "text-2xl md:text-3xl xl:text-4xl",
    className
  )}
>
  <slot />
</h2>
